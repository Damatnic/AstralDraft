# Production Environment Variables Template

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-with-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Database Configuration
DB_PATH=/app/data/astral-draft.db
NODE_ENV=production

# Server Configuration
PORT=3001
HOST=0.0.0.0

# API Keys (Replace with actual production keys)
VITE_GEMINI_API_KEY=your_production_gemini_api_key
VITE_ESPN_API_KEY=your_production_espn_api_key
VITE_NFL_API_KEY=your_production_nfl_api_key
VITE_ODDS_API_KEY=your_production_odds_api_key

# WebSocket Configuration
WS_PORT=3002

# Security Settings
CORS_ORIGIN=https://astraldraft.com,https://www.astraldraft.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Email Configuration (if implementing email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@astraldraft.com
SMTP_PASS=your_email_password

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Performance Settings
MAX_REQUEST_SIZE=20mb
COMPRESSION_LEVEL=6
CACHE_TTL=3600

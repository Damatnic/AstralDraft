# Environment Configuration for Astral Draft
# For 10-20 users - simplified security configuration

# JWT Configuration
JWT_SECRET=astral-draft-jwt-secret-change-this-in-production-2024
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Database Configuration
DB_PATH=./data/astral-draft.db

# Application Configuration
NODE_ENV=development
PORT=3001

# API Configuration (for future real data integration)
ESPN_API_KEY=your_espn_api_key_here
NFL_API_KEY=your_nfl_api_key_here

# Security Configuration (simplified for small user base)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Environment Variables for Astral Draft

# JWT Configuration
JWT_SECRET=astral-draft-super-secret-key-change-in-production-with-32-chars-minimum
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Database Configuration
DB_PATH=./data/astral-draft.db
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# Google Gemini AI API Key
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Sports Data APIs
VITE_ESPN_API_KEY=your_espn_api_key_here
VITE_NFL_API_KEY=your_nfl_api_key_here
VITE_YAHOO_API_KEY=your_yahoo_api_key_here
VITE_SPORTSIO_API_KEY=your_sportsio_api_key_here

# Environment
VITE_NODE_ENV=development

# API Base URLs
VITE_API_BASE_URL=http://localhost:3001
VITE_WEBSOCKET_URL=ws://localhost:3001

# Feature Flags
VITE_ENABLE_LIVE_DATA=false

# Authentication Rate Limiting
MAX_AUTH_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=900000

# Security
BCRYPT_SALT_ROUNDS=12
MIN_PASSWORD_LENGTH=8
VITE_ENABLE_VOICE_COMMANDS=true
VITE_ENABLE_AI_ORACLE=true

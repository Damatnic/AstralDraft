# Environment Variables for Astral Draft
# Copy this file to .env and update with your actual values

# JWT Configuration
JWT_SECRET=astral-draft-super-secret-key-change-in-production-with-32-chars-minimum
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Database Configuration (SQLite for development, Neon PostgreSQL for production)
DB_PATH=./data/astral-draft.db
DATABASE_URL=postgresql://username:password@host/database?sslmode=require
NEON_API_KEY=your_neon_api_key_here
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# API Keys for Backend (Remove VITE_ prefix - these should only be on backend)
GEMINI_API_KEY=your_gemini_api_key_here
ESPN_API_KEY=your_espn_api_key_here
NFL_API_KEY=your_nfl_api_key_here
YAHOO_API_KEY=your_yahoo_api_key_here
SPORTSIO_API_KEY=your_sportsio_api_key_here
ODDS_API_KEY=your_odds_api_key_here

# Environment
VITE_NODE_ENV=development

# API Base URLs
VITE_API_BASE_URL=http://localhost:3001
VITE_WEBSOCKET_URL=ws://localhost:3001

# Feature Flags
VITE_ENABLE_LIVE_DATA=false

# Authentication Rate Limiting
MAX_AUTH_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=900000

# Security & Authentication
BCRYPT_SALT_ROUNDS=12
MIN_PASSWORD_LENGTH=8
SESSION_SECRET=your_session_secret_here_change_in_production
COOKIE_SECRET=your_cookie_secret_here_change_in_production
CSRF_SECRET=your_csrf_secret_here_change_in_production

# Stripe Payment Integration (Optional)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Feature Flags
VITE_ENABLE_VOICE_COMMANDS=true
VITE_ENABLE_AI_ORACLE=true
ENABLE_AI_FEATURES=true
ENABLE_PAYMENTS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
